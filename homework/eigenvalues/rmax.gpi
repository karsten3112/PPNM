set terminal svg background "white"
set output "Rmax.svg"
set grid
set tics out font "Times New Roman, 15"
set xlabel "rmax" font "Times New Roman, 18"
set ylabel "E" font "Times New Roman, 18"


f(x) = -13.6/27.211

set style line 1 lw 1.2 lc rgb "black" lt 1 ps 1 pt 13 pi 1
set style line 2 lw 1.2 lc rgb "red" lt 1


plot[2:8][-0.7:0.05] "rmax.data" using 2:3 ls 1 title "convergence", \
						"rmax.data" using 2:3 ls 1 with lines title "", \
						f(x) ls 2 with lines title "exact"
